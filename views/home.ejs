<%- include('./partials/head') %>
  </head>
  <body>
<%- include('./partials/nav') %>
    
    <main class="max-w-3xl mx-auto mt-16 px-6">
  <section class="bg-white rounded-2xl shadow-xl border border-gray-100">
    
    <h2 class="text-3xl md:text-4xl font-extrabold text-gray-800 text-center px-8 pt-10">
      Here are our registered homes
    </h2>

    <p class="text-gray-500 text-center mt-2 mb-6">
      Browse the list of verified properties below
    </p>

    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4 px-8 pb-10">
      <% registratedHouses.forEach(house => { %>
        <li class="bg-gray-50 border border-gray-200 rounded-xl px-5 py-4 shadow-sm hover:shadow-md hover:border-gray-300 transition-all">
          <span class="block text-lg font-semibold text-gray-800 tracking-tight">
            <%= house.houseName %>
          </span>
        </li>
      <% }) %>
    </ul>

  </section>
</main>

  </body>
</html>
